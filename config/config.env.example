# Subscription Manager Environment Configuration
# Copy this file to config.env and modify the values as needed

# Database Configuration
DB_USER=subscription_user
DB_PASSWORD=subscription_password
DB_HOST=localhost
DB_PORT=5432
MAIN_DB=subscription_main_db
CREATE_DB=subscription_create_db

# Service Ports
EUREKA_PORT=8761
MAIN_APP_PORT=3000
CREATE_SERVICE_PORT=3001
API_GATEWAY_PORT=8080

# Java Configuration
JAVA_OPTS=-Xmx2g -Xms1g
JAVA_HOME=/usr/lib/jvm/java-17-openjdk

# Eureka Configuration
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8761/eureka/
EUREKA_INSTANCE_PREFERIPADDRESS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/

# Security Configuration (for production)
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/ 